<h2 id="primary">Create a New Item</h2>

<%= form_for([@store, @item]) do |f| %>
  <div id="primary">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div id="primary">
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>
  <div id="primary">
    <%= f.label :item_type %>
    <%= f.text_field :item_type %>
  </div>
  <div id="primary">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div id="primary">
    <%= f.label :total_measure %>
    <%= f.text_field :total_measure %>
  </div>
  <div id="primary">
    <%= f.label :unit_of_measure %>
    <%= f.text_field :unit_of_measure %>
  </div>
  <div id="primary">
    <%= f.label :notes %>
    <%= f.text_field :notes %>
  </div>
  <div id="primary">
    <%= f.submit %>
  </div>
<% end %>
<%#= link_to("<< Back to items list", {:action => 'show'}, :class => 'back-link') %>
